@model Livepl.Entities.User

@{
    ViewData["Title"] = "Users";
}

<form method="post">
    <div class="form-group">
        <label for="exampleFormControlInput1">Email address</label>
        <input asp asp-for="Email" type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Username</label>
        <input asp-for="Username" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name">
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Name</label>
        <input asp-for="Name" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name">
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Password</label>
        <input asp-for="Password" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Password">
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>
